BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: ''
        BoxLayout:
            orientation: 'vertical'
            Button:
                id: value_up_button
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                id: value_down_button
                text: 'Down'
                on_press: app.handle_increment(-1)
    Button:
        id: conversion_button
        text: 'Convert Miles to Kilometers'
        on_press: app.handle_conversion(input_number.text)
    Label:
        id: output_label
        text: ''
