<Widget>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0
        Rectangle:
            pos: self.pos
            size: self.size
    color: 0, 0, 0.7, 1

<Button>:
    canvas.after:
        Color:
            rgba: 1, 1, 1, 1
BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '0'
            on_text: app.real_time_conversion(input_number.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                id: value_up_button
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                id: value_down_button
                text: 'Down'
                on_press: app.handle_increment(-1)
    Label:
        id: output_label
        text: ''
